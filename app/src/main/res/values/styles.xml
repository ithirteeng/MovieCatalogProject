<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text_style">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/gray_faded</item>
        <item name="android:padding">@dimen/edit_texts_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginBottom">@dimen/edit_texts_margin</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/edit_texts_text_size</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="sign_button_style">
        <item name="android:background">@drawable/sign_button_selector</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/edit_texts_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginTop">@dimen/buttons_margin</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="text_button_style">
        <item name="android:background">@color/transparent</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/edit_texts_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/buttons_margin</item>
        <item name="android:layout_marginStart">@dimen/buttons_margin</item>
        <item name="android:layout_marginBottom">@dimen/buttons_margin</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="profile_text_style">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_marginBottom">@dimen/body_text_margin</item>
        <item name="android:layout_marginTop">@dimen/body_text_margin</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movie_details_style">
        <item name="android:textColor">@color/base_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_body_text_size</item>
        <item name="android:layout_marginBottom">@dimen/small_body_text_margin</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
    </style>

    <style name="sign_error_style">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginTop">@dimen/error_text_top_bottom_margins</item>
        <item name="android:layout_marginBottom">@dimen/error_text_top_bottom_margins</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:text">@string/empty_string</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/sign_errors_text_size</item>
    </style>

    <style name="male_picker_style">
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/gray_faded</item>
        <item name="android:padding">@dimen/male_picker_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/edit_texts_margin</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textSize">@dimen/male_picker_text_size</item>
    </style>

    <style name="date_picker_style" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:textColorPrimary">@color/gray_faded</item>
        <item name="android:textColorSecondary">@color/gray_faded</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_module_button_style">
        <item name="android:background">@drawable/sign_button_selector</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingBottom">@dimen/main_module_button_padding_end_start</item>
        <item name="android:paddingTop">@dimen/main_module_button_padding_end_start</item>
        <item name="android:paddingStart">@dimen/main_module_button_padding_top_bottom</item>
        <item name="android:paddingEnd">@dimen/main_module_button_padding_top_bottom</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginBottom">@dimen/main_module_button_margin</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/bright_white</item>
        <item name="android:textSize">@dimen/main_module_button_text_size</item>
    </style>

    <style name="title_text_style">
        <item name="android:singleLine">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/title_text_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/title_text_top_bottom_padding</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/bright_white</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_first_style">
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/header_first_text_size</item>
        <item name="android:paddingTop">@dimen/header_first_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/header_first_top_bottom_padding</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_second_style">
        <item name="android:textColor">@color/bright_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/header_second_text_size</item>
        <item name="android:layout_marginBottom">@dimen/header_second_text_margin</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body_text_style">
        <item name="android:textColor">@color/bright_white</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:paddingTop">@dimen/body_text_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/body_text_top_bottom_padding</item>
    </style>

    <style name="genre_style">
        <item name="android:background">@drawable/genre_background</item>
        <item name="android:paddingStart">@dimen/common_end_start_margins</item>
        <item name="android:paddingEnd">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginEnd">@dimen/genre_margin</item>
        <item name="android:layout_marginBottom">@dimen/genre_margin</item>
        <item name="android:paddingTop">6sp</item>
        <item name="android:paddingBottom">6sp</item>
        <item name="android:textColor">@color/base_white</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="my_ratingbar_style" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">50dp</item>

    </style>
</resources>