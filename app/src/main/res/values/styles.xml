<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text_style">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColorHint">@color/gray_faded</item>
        <item name="android:padding">@dimen/edit_texts_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginTop">@dimen/edit_texts_margin</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/edit_texts_text_size</item>
    </style>

    <style name="empty_button_style">
        <item name="android:background">@drawable/empty_button_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/edit_texts_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginTop">@dimen/buttons_margin</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="text_button_style">
        <item name="android:background">@color/transparent</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/edit_texts_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/buttons_margin</item>
        <item name="android:layout_marginStart">@dimen/buttons_margin</item>
        <item name="android:layout_marginBottom">@dimen/buttons_margin</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="filled_button_style">
        <item name="android:background">@drawable/filled_button_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/edit_texts_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/buttons_margin</item>
        <item name="android:layout_marginStart">@dimen/buttons_margin</item>
        <item name="android:layout_marginBottom">@dimen/buttons_margin</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/bright_white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="header_first_style">
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/header_first_text_size</item>
        <item name="android:layout_marginTop">@dimen/header_first_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/header_first_text_margin</item>
        <item name="android:layout_marginStart">@dimen/common_end_start_margins</item>
        <item name="android:layout_marginEnd">@dimen/common_end_start_margins</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>