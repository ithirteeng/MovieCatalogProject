<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    app:layoutDescription="@xml/activity_sign_in_scene"
    tools:context=".presentation.sign_in.SignInActivity">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/sign_up_logo_top_margin"
        android:contentDescription="@string/logo_content_description"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/logoBottomGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logoBottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <TextView
        android:id="@+id/registrationHeaderTextView"
        style="@style/header_first_style"
        android:text="@string/sign_in_registration_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoBottomGuideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topButtonsGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <Button
        android:id="@+id/signUpButton"
        style="@style/empty_button_style"
        android:text="@string/sign_in_registration_button_text"
        app:layout_constraintBottom_toTopOf="@+id/registrationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topButtonsGuideline"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/registrationButton"
        style="@style/text_button_style"
        android:text="@string/sign_in_sign_up_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpButton" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:paddingTop="@dimen/edit_texts_margin"
        android:paddingBottom="@dimen/edit_texts_margin"
        app:layout_constraintBottom_toTopOf="@+id/topButtonsGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationHeaderTextView"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/loginEditText"
                style="@style/edit_text_style"
                android:ems="10"
                android:hint="@string/sign_in_login_text"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/emailEditText"
                style="@style/edit_text_style"
                android:ems="10"
                android:hint="@string/sign_in_email_text"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/nameEditText"
                style="@style/edit_text_style"
                android:ems="10"
                android:hint="@string/sign_in_name_text"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/passwordEditText"
                style="@style/edit_text_style"
                android:ems="10"
                android:hint="@string/sign_in_password_text"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/repeatPasswordEditText"
                style="@style/edit_text_style"
                android:ems="10"
                android:hint="@string/sign_in_repeat_password_text"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/date_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/datEditText"
                    style="@style/edit_text_style"
                    android:ems="10"
                    android:hint="@string/sign_in_birth_date_text"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/dateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/edit_texts_padding"
                    android:backgroundTint="@color/transparent"
                    android:contentDescription="@string/date_picker_content_description"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:src="@drawable/ic_baseline_date_range_24"
                    app:layout_constraintBottom_toBottomOf="@+id/datEditText"
                    app:layout_constraintEnd_toEndOf="@+id/datEditText"
                    app:layout_constraintTop_toTopOf="@+id/datEditText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.example.moviecatalogproject.presentation.sign_in.model.MalePickerCustomView
                android:id="@+id/malePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_end_start_margins"
                android:layout_marginEnd="@dimen/common_end_start_margins" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.motion.widget.MotionLayout>